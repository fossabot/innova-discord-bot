{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"outDir": "./build",
		"rootDir": "./src",
		"declaration": false,
		"sourceMap": true,
		"noImplicitAny": false,
		"alwaysStrict": true,
		"typeRoots": [
						"./node_modules/@types"
        ]
	},
	"exclude": [
		"./node_modules/*",
		"./build/*",
		"./log/*"
	],
	"include": [
		"./src/**/*.ts"
	]
}